# Google Gemini API (for AI email generation)
GEMINI_API_KEY=your-gemini-api-key-here

# Google Sheets (for data storage)
GOOGLE_SPREADSHEET_ID=your-google-sheet-id-here
GOOGLE_CREDENTIALS_FILE=credentials.json

# Gmail (for sending emails)
GMAIL_ADDRESS=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password-here

# Notifications (choose one method: telegram or email)
NOTIFICATION_METHOD=telegram

# Telegram Notifications (if using telegram)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Email Notifications (if using email)
NOTIFICATION_EMAIL=your-notification-email@gmail.com

# Optional: Outscraper API (for Google Maps scraping)
# OUTSCRAPER_API_KEY=your-outscraper-api-key-here
